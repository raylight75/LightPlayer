<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  xmlns="http://xamarin.com/schemas/2014/forms"             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                        
             xmlns:pages ="clr-namespace:Player.Pages"
             xmlns:behaviorsPack="clr-namespace:Xamarin.Forms.BehaviorsPack;assembly=Xamarin.Forms.BehaviorsPack"
             x:Class="Player.Pages.MainPage" NavigationPage.HasNavigationBar="True">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
            <SearchBar Text="{Binding Filter}" Placeholder="Search" HorizontalOptions="Start" 
                       WidthRequest="240" HeightRequest="40" TextColor="White" Opacity="0.5">
                <SearchBar.Behaviors>
                    <behaviorsPack:EventToCommandBehavior
                               EventName="TextChanged"
                               Command="{Binding SearchCommand}"/>
                </SearchBar.Behaviors>
            </SearchBar>           
        </StackLayout>
    </NavigationPage.TitleView>
    <!--Pages can be added as references or inline-->
    <pages:StartPage/>
    <pages:Songs/>
    <pages:Playing/>
    <pages:Albums/>
    <pages:SunCloud/>    
</TabbedPage>